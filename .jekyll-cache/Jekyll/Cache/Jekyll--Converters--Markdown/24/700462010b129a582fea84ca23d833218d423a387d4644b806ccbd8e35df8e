   "source": [
    "module FinRel\n",
    "    id(m) = [(x,x) for x in m ]\n",
    "    compose(f,g) = [(a,c) for (a,b1) in f for (b2,c) in g if b1 == b2 ]\n",
    "    fst(a,b) = [ ( [a ; b] , a )  for x in a for y in b ] \n",
    "    mcopy(m) = [ (x  , [x ; x]) for x in m ]\n",
    "    # and so on.\n",
    "\n",
    "\n",
    "    converse(f) = [(y,x) for (x,y) in f ]\n",
    "\n",
    "    x âŠ† y = all( [(a,b) âˆˆ y for (a,b) in x] )\n",
    "\n",
    "    meet(x,y) = [ (a,b) for (a,b) in x if (a,b) âˆˆ y ]\n",
    "    join(y,x) = [ (a,b) for (a,b) in x if (a,b) âˆˆ y ]\n",
    "    âˆ¨(x,y) = join(x,y)\n",
    "    âˆ§(x,y) = meet(x,y) \n",
    "    bottom = []\n",
    "end"
   ]
