    "module Func1\n",
    "    id = x -&gt; x\n",
    "    compose(f,g) = x -&gt; g(f(x))\n",
    "    otimes(f,g) = ((x,y),) -&gt; (f(x),g(y))\n",
    "    mcopy = x -&gt; (x,x)\n",
    "    fst = ((x,y),) -&gt; x\n",
    "    snd = ((x,y),) -&gt; y\n",
    "    pair(f,g) = x -&gt; (f(x), g(x))\n",
    "    assoc = (((x,y),z),) -&gt; (x, (y,z))\n",
    "    braid = ((x,y),) -&gt; (y,x)\n",
    "\n",
    "    add = ((x,y),) -&gt; x + y # xy -&gt; +(xy...)\n",
    "    mul = ((x,y),) -&gt; x * y # xy -&gt; *(xy...)\n",
    "    #spread(f) = (x,) -&gt; f(x...)\n",
    "    square = compose(mcopy, mul)\n",
