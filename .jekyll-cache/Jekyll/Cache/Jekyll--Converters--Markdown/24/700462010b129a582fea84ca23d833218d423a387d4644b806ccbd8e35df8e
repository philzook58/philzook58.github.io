   "source": [
    "#pseudo code\n",
    "module LinRel2Sketch\n",
    "    struct LinRel\n",
    "        left\n",
    "        hidden\n",
    "        right\n",
    "    end\n",
    "\n",
    "    id(n) = LinRel(eye(n), zeros(n,0),  -eye(n))\n",
    "    function compose(f,g)\n",
    "        LinRel( [ f.left ; 0 ; 0]   ,  \n",
    "                [f.right f.middle   0        0 ;\n",
    "                   0        0       g.left   g.middle ;\n",
    "                   eye(n)   0       -eye(n)  0 ]   \n",
    "               , [0 ; g.right ; 0] )    \n",
    "    end\n",
    "\n",
    "end\n",
    "\n"
   ]
  },
  {
