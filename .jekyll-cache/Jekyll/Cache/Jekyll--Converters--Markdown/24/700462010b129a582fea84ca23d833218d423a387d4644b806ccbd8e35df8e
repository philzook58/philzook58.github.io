    "    struct FunMorph\n",
    "       fun\n",
    "       dom\n",
    "       cod\n",
    "    end\n",
    "    id(n::FunOb) = FunMorph(x -&gt; x, n , n)\n",
    "    fst(n::FunOb,m::FunOb) = FunMorph(x -&gt; x[1:n.ob], FunOb(n.ob + m.ob), FunOb(n.ob))  # fst(n) ?\n",
    "    compose(f::FunMorph,g::FunMorph) = FunMorph(x -&gt; g.fun(f.fun(x)),  f.dom, g.cod )\n",
